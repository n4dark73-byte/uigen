{
  "permissions": {
    "allow": [
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(sqlite3:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Glob",
      "Grep",
      "Read",
      "Edit",
      "Write",
      "TodoWrite",
      {
        "matcher": "mcp__playwright__browser_*"
      }
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read|Grep",
        "hooks": [
          {
            "type": "command",
            "command": "node ./hooks/read_hook.js"
          }
        ]
      }
    ]
  }
}
